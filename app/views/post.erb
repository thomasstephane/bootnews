<div class="container">
  <h1><%= @post.title + " | votes: " + @post.score %></h1>
  <% unless @existing_post_vote %>
  
  <form name="input" action="/post/<%=@post.id%>/vote" method="post">
    <button type="submit" name="postvote" value="Up">Up</button>
    <button type="submit" name="postvote" value="Down">Down</button>
  </form>
  <% end %>

  <p><%= @post.url %></p>
  <p><%= @post.post %></p>
  <ul>
    <%@comments.each do |comment|%>
    <li>
      <% if @existing_comment_vote[comment.id] %>

      <form name="input" action="/post/<%=@post.id%>/<%=comment.id%>/vote" method="post">
        <button type="submit" name="commentvote" value="Up">Up</button>
        <button type="submit" name="commentvote" value="Down">Down</button>
      </form>
      <% end %>
      <%=comment.comment + " | votes: " + comment.score %>
    </li>
    <% end %>
  </ul>
</div>

<% if @user %>

<div class="container">
  <form name="input" action="/post/<%=@post.id%>" method="post">
    <textarea name="comment" required placeholder="Type comment here."></textarea>
    <input type="submit" value="Post">
  </form>


</div>
<div class="link"><a href="/profile/<%= @user.id%>">Profile</a></div>
<div class="link"><a href="/logout">Logout</a></div>
<% else %>  
<div class="link"><a href="/login">Login</a></div>
<div class="link"><a href="/signup">Sign up</a></div>
<% end %>

<div class="link"><a href="/">Home</a></div>